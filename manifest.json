{
    "name": "Reader Mode",
    "version": "0.1.0",
    "description": "Turn websites into something hella minimal",
    "permissions": ["activeTab"],
    "manifest_version": 2,
    
    "browser_action": {
        "default_icon": "icon-A.png",
        "default_title": "Reader Mode"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
